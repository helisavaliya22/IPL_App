<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Player_Display_Activity">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/expand"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/expand"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/player_number"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="1/7"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textSize="30dp"/>
        <ImageView
            android:id="@+id/reload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/reload"/>
    </LinearLayout>

        <ImageView
            android:id="@+id/plpic"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@id/line1"/>
        <TextView
            android:id="@+id/plname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="Name"
            android:gravity="center"
            android:layout_weight="4"
            android:fontFamily="cursive"
            android:layout_below="@+id/plpic"/>
        <TextView
            android:id="@+id/plsubname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="15dp"
            android:text="SubName"
            android:gravity="center"
            android:layout_weight="4"
            android:fontFamily="cursive"
            android:layout_below="@+id/plname"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/line1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:padding="10dp">
        <ImageView
            android:id="@+id/copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/copy1"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/previous"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_previous"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/pencil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pencil2"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_next_item"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_share"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>